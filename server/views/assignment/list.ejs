<%- include ("../partials/header")%>
<%- include ("../partials/main_nav")%>
<!-- Main Content -->
<main>
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-10">
            <h1><%= title %></h1>
            <a href="/assignment-list/add" class="btn btn-primary" role="button">
                <i class= "fas fa-plus-circle"></i> Add a Assignment
            </a>
            <br>
    <table class="table table-striped table-dark">
    <tr class="center"> 
        <th class="text-center col-2">Subject</th>
        <th class="text-center col-3">Assignment</th>
        <th class="text-center col-4">Description</th>
        <th class="text-center col-2">Weight %</th>
        <th class="text-center col-3">Due Date</th>
        <th class="text-center col-1"></th>
        <th class="text-center col-1"></th>
        
    </tr>
    <!--Repeat the template-->
    <% for(let count=0; count<Assignmentlist.length; count++) { %>
        <tr class="center">
            <td class="text-center col-2"><%= Assignmentlist[count].subject %></td>
            <td class="text-center col-3"><%= Assignmentlist[count].assignment %></td>
            <td class="text-center col-4"><%= Assignmentlist[count].description %></td>
            <td class="text-center col-2"><%= Assignmentlist[count].weight %></td>
            <td class="text-center col-3"><%= Assignmentlist[count].dueDate %></td>
            <td class="text-center col-1">
                <a href="/assignment-list/edit/<%= Assignmentlist[count]._id %>"
                    class = "btn btn-primary">
                    <i class = "fas fa-pencil-alt"></i> Edit </a>
                </td>
            <td class="text-center col-1">
                <a href="/assignment-list/delete/<%= Assignmentlist[count]._id %>"
                    class = "btn btn-danger">
                    <i class = "fas fa-trash-alt"></i> Delete </a>
                </td>
        
        </tr>
    <% } %>
    </table>
</div>
</div>
</main>
<%- include ("../partials/bottom_nav") %>
<%- include ("../partials/footer") %>