<%- include ("../partials/header")%>
<%- include ("../partials/main_nav")%>

<!--Content for the Edit page-->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">

               <div class="form-group">
                    <label for="subjectTextField"> Subject </label>
                    <input type="text" class="form-control"
                    id="subjectTextField"
                    placeholder="Enter the Subject Name"
                    name="subject" 
                    value="<%= assignment.subject %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="assignmentTextField"> Assignment </label>
                    <input type="text" class="form-control"
                    id="assignmentTextField"
                    placeholder="Enter the Assignment Name"
                    name="assignment" 
                    value="<%= assignment.assignment %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descTextField"> Description </label>
                    <textarea type="text" class="form-control"
                    id="descTextField"
                    placeholder="Enter the Assignment Description"
                    name="description" required>
                    <%= assignment.description %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label for="weightTextField"> Weight </label>
                    <input type="number" class="form-control"
                    id="weightTextField"
                    placeholder="Enter the Weight of the Assignment"
                    name="weight" 
                    value="<%= assignment.weight %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="dueDatepriceTextField"> Due Date </label>
                    <input type="text" class="form-control"
                    id="dueDateTextField"
                    placeholder="Enter the Due Date of the Assignment"
                    name="dueDate" 
                    value="<%= assignment.dueDate %>"
                    required>
                </div>
                    
                    <br>

                <button class="btn-btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/assignment-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>    


<%- include ("../partials/bottom_nav") %>
<%- include ("../partials/footer") %>



